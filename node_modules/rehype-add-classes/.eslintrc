{
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "module": true
    }
  },
  "env": {
    "es6": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
      "no-console": "warn",
      "indent": ["error", 4, { "SwitchCase": 1, "ignoreComments": true }],
      "quotes": ["error", "single"],
      "semi": ["error", "always"],
      "space-in-parens": ["error"],
      "space-infix-ops": "error",
      "object-curly-spacing": ["error", "always"],
      "comma-spacing": "error",
      "space-before-function-paren": ["error", "never"],
      "keyword-spacing": [
        "error", 
        { 
          "before": true, 
          "after": true,
          "overrides": {
            "if": { "after": false },
            "for": { "after": false },
            "while": { "after": false },
            "do": { "after": false },
            "catch": { "after": false }
          } 
        }
      ],
      "array-bracket-spacing": "error"
  }
}